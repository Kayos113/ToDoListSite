<%- include("header") -%>

<div class="box" id="heading">
  <h1> <%= listTitle %> </h1>
</div>

<div class="box">

  <% newListItems.forEach( (item) => { %>
  <form class="" action="/delete" method="post">
    <div class="item">
      <button class="checkButton <%= item._id %>" type="submit" name="checkbox" value="<%= item._id %>" onChange="this.form.submit()">
        <img src="images/Step<%= item.count %>.png" alt="">
      </button>
      <p><%=  item.name  %></p>
    </div>
    <input type="hidden" name="listName" value="<%= listTitle %>"></input>
  </form>
  <%  }) %>

  <form class="item" action="/" method="post">
    <input type="text" name="newItem" placeholder="New Item" autocomplete="off">
    <button class="newItem" type="submit" name="list" value="<%= listTitle %>">+</button>
  </form>
</div>

<%- include("footer") -%>
